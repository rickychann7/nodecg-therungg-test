{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"text": {
			"type": "string"
		},
		"age": {
			"description": "Age in years",
			"type": "integer",
			"minimum": 0
		}
	},
	"additionalProperties": false,
	"required": ["text", "age"],
	"default": {
		"text": "default text",
		"age": 0
	}
}
